# =================================
# CONFIGURAZIONE TELEGRAM BOT
# =================================
# Ottieni il token da @BotFather su Telegram
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz

# =================================
# CONFIGURAZIONE DATABASE MYSQL
# =================================
# Host database (di solito localhost per installazione locale)
DB_HOST=localhost

# Porta MySQL (default 3306)
DB_PORT=3306

# Nome del database da creare
DB_NAME=telegram_manager

# Credenziali utente MySQL
# IMPORTANTE: Crea un utente dedicato, non usare root in produzione
DB_USER=telegram_user
DB_PASSWORD=your_secure_password_here

# Alternativa: URL completo del database (sostituisce i parametri sopra)
# DATABASE_URL=mysql+pymysql://telegram_user:password@localhost:3306/telegram_manager

# =================================
# SICUREZZA
# =================================
# Chiave segreta Flask - CAMBIA SEMPRE IN PRODUZIONE
# Genera una chiave casuale lunga e complessa
SECRET_KEY=your_very_long_random_secret_key_minimum_32_characters

# =================================
# AMBIENTE
# =================================
# Ambiente di esecuzione (development/production)
FLASK_ENV=development

# Debug mode (true/false)
FLASK_DEBUG=true

# =================================
# ISTRUZIONI SETUP
# =================================
# 1. Copia questo file come .env
# 2. Sostituisci tutti i valori con i tuoi dati reali
# 3. NON committare mai il file .env nel repository
# 4. Esegui: python setup_database.py